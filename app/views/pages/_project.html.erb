<div class="card-project"
     data-action="click->modal#open"
     data-project="<%= project.id %>"
  >
  <% colour = ['pippin', 'old_lace', 'black_n_white', 'red'] %>
  <% if project.photo_url.present? %>
    <div class="project-show-img">
      <%= image_tag project.photo_url %>
    </div>
  <% end %>
  <div class="card-project-info">
    <div class="project-name <%= "#{colour.sample}" %>">
      <p class="m-0"><%= project.name %></p>
    </div>
    <div class="project-desc p-3">
      <div class="project-members mb-2">
        <% project.students.each do |s| %>
          <%= image_tag s.avatar_url, class: 's-avatar-bordered'  %>
        <% end %>
      </div>
      <p class="proj-desc-short"><%= project.description %></p>
    </div>
  </div>
</div>

<!-- Modal -->
  <div class="modal fade" data-target="modal.modal" tabindex="-1" role="dialog" aria-labelledby="itemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content" style="margin-bottom: 10rem;">
        <div class="modal-body" data-target="modal.container">
          <div class="text-center py-5">
            <i class="fas fa-spinner fa-pulse display-4 text-muted"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
